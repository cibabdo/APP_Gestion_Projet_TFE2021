{% extends 'base.html.twig' %}

{% block content %}
<div class="container-fluid px-1 px-md-5 px-lg-1 px-xl-5 py-5 mx-auto">
    <div class="card card0 border-0">
        <div class="row d-flex">
            <div class="col-lg-6">
                <div class="card1 bg-light pb-5">
                    <div class="card1 pb-5">
                    <div class="row"> <img src="{{asset('public/image/CHULogo.png')}}" class="logo"> </div>
                    <div class="row px-3 justify-content-center mt-4 mb-5 border-line"> <img src="{{asset('public/image/picture_login.png')}}" class="image"> </div>
                </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card2 card border-0 px-4 py-5">
                    {{ form_start(form, {'attr' : {'autocomplete' : 'off'}}) }}
                    <h3 class="mb-1">Demande d'un nouveau mot de passe</h3>                    
                    <div class="row px-3">                                              
                        {{ form_label(form.email, 'Votre email', {'label_attr': { class: 'text-sm' }}) }}
                            {% if form_errors(form.email) %}
                                <div class="form-error text-danger">
                                    <span class="span_error bg-danger text-white">ERREUR</span>&nbsp;{{ form_errors(form.email) }}
                                </div>            
                            {% endif %}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                    </div>                   
                    <hr/>                    
                    <div class="row mb-4">
                        <p></p>
                        <div class="col-md-5"> <button class="btn btn-blue text-center mb-1"><strong>Envoyer</strong></button> </div>
                        
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
        <div class="bg-blue py-4">
            <small class="ml-4 ml-sm-5 mb-2">Un probl√®me avec votre compte ? <a href="#" class="link-dark">contactez notre support</a></small>
        </div>
    </div>
</div>
<script>
    document.getElementById("form_email").focus()
</script>
{% endblock %}
